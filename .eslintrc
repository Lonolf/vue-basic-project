{
  "root": true,
  "parser": "vue-eslint-parser",
  "parserOptions": {
      "parser": "@typescript-eslint/parser"
  },
  "extends": [
      "plugin:vue/strongly-recommended",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "prettier"
  ],
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "comma-dangle": [
        "error",
        "always-multiline"
    ],
    "curly": [
        "error",
        "multi",
        "consistent"
    ],
    "no-useless-constructor": "off",
    "no-case-declarations": "off",
    "prefer-const": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "quotes": "off",
    "@typescript-eslint/no-use-before-define": "off",
    "indent": "off",
    "@typescript-eslint/indent": "off",
    "semi": [
        "error",
        "never"
    ],
    "camelcase": "off",
    "no-trailing-spaces": "error",
    "prettier/prettier": [
        "error",
        {
            "endOfLine": "auto",
            "singleQuote": true,
            "trailingComma": "all",
            "semi": false,
            "arrowParens": "avoid",
            "printWidth": 120,
            "tabWidth": 2,
            "useTabs": false,
            "quoteProps": "preserve",
            "jsxSingleQuote": true
        }
    ]
  }
}